---
import Layout from '../../layouts/Layout.astro';
import PageLayout from '../../components/PageLayout.astro'; 
import { carriersContent } from '../../data/pagesData';

// FIXED: Define the schemaData variable
const schemaData = {
  faq: carriersContent.faq?.faqs,
  reviews: carriersContent.testimonial ? [{
    author: carriersContent.testimonial.name,
    quote: carriersContent.testimonial.quote,
    role: carriersContent.testimonial.role
  }] : []
};
---

<Layout 
  title="Carrier Scheduling Portal | DataDocks"
  description="Stop the endless emails. Give your carriers a self-service portal to book their own appointments 24/7."
  schemaData={schemaData} 
>
  <PageLayout content={carriersContent} />
</Layout>