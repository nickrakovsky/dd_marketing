---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
// Retrieve the correct UUID from environment variables
const PUBLIC_BENTO_UUID = import.meta.env.PUBLIC_BENTO_SITE_UUID;
---

<!doctype html>
<html lang="en">
	<head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        
		<title>{title}</title>

        <script is:inline define:vars={{ PUBLIC_BENTO_UUID }}>
            window.bentoSettings = {
              uuid: PUBLIC_BENTO_UUID
            };
        </script>

        <script async src={`https://fast.bentonow.com?site_uuid=${PUBLIC_BENTO_UUID}`}></script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>